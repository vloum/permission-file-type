{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./lib/**/*", "./rollup.config.ts", "./types/**/*", "./lib/index.ts"]
}